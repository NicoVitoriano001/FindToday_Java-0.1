<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> <!-- Orientação vertical para separar as linhas -->

        <!-- Primeira linha com quatro elementos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"> <!-- Horizontal para alinhar os quatro elementos -->

            <TextView
                android:id="@+id/idTVValorDesp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Valor Desp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="2dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idTVTipoDesp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipo Desp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:maxLength="5"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/idTVFontDesp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fonte Desp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:maxLength="5"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/idTVdataDesp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="Data Desp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <!-- Segunda linha com um elemento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"> <!-- Horizontal para alinhar um elemento -->

            <TextView
                android:id="@+id/idTVDespDescr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição Desp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="2dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
