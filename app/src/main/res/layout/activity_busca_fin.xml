<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarFinActivity">

    <!-- LinearLayout para o conteúdo existente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- EditTexts e Button -->
        <EditText
            android:id="@+id/idEdtValorDespBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Valor Buscar"
            android:inputType="numberDecimal" />

        <!-- Substituído por Spinner -->
        <Spinner
            android:id="@+id/idEdtTipoDespBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Tipo Buscar" />

        <!-- Substituído por Spinner -->
        <Spinner
            android:id="@+id/idEdtFontDespBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Fonte Buscar" />

        <EditText
            android:id="@+id/idEdtDespDescrBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Descrição Buscar"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters|textMultiLine"
            android:singleLine="true" />

        <EditText
            android:id="@+id/idEdtDataDespBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Data e Hora Buscar"
            android:imeOptions="actionDone"
            android:inputType="number|textCapCharacters" />
          <!--  android:inputType="datetime" -->

        <Button
            android:id="@+id/idBtnBuscarDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Buscar Registro"
            android:textAllCaps="false" />
    </LinearLayout>



        <!-- Botão de retorno à home -->
    <!-- Botão Home - Canto inferior esquerdo -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idFABBuscarHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_home"
        app:tint="@color/white"/>

    <!-- Botão Add - Canto inferior direito -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idFABBuscarNewsFIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/white"/>

</FrameLayout>