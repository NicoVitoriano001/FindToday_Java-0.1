<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- // 16.05.25 Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GFGRoomDatabase">

        <!-- Atividade de autenticação do Google (opcional) -->
        <activity
            android:name="com.firebase.ui.auth.AuthUI"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <!-- Meta-dados do Firebase -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />



        <activity android:name=".BuscarFinActivity" android:label="Buscar Fin"/>
        <activity android:name=".EditFinActivity" android:label="Edit Fin"/>
        <activity android:name=".NewFinActivity" android:label="Nova Fin"/>
        <activity android:name=".ResultBuscaActivity" android:label="Resumo Fin"/>
        <activity android:name=".ResumoDespGrafActivity" android:exported="false" />
        <activity android:name=".ResultBuscaCredActivity" android:label="Resumo Créditos Fin"/>
        <activity android:name=".ResultBuscaGrafActivity" android:label="Resumo Graf Fin"/>
        <activity android:name=".ResultBuscaDespActivity" android:label="Resumo Despesas Fin"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>